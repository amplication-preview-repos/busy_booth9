datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserFoodRequest {
  cookingSteps           String?
  createdAt              DateTime            @default(now())
  food                   String?
  id                     String              @id @default(auto()) @map("_id") @db.ObjectId
  items                  String?
  previousFoodItemsItems PreviousFoodItems[]
  updatedAt              DateTime            @updatedAt
}

model PreviousFoodItems {
  createdAt         DateTime         @default(now())
  food              String?
  id                String           @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt         DateTime         @updatedAt
  userFoodRequest   UserFoodRequest? @relation(fields: [userFoodRequestId], references: [id])
  userFoodRequestId String?          @db.ObjectId
}
